<?xml version="1.0" encoding="UTF-8"?>
<Preferences>
    <!-- Disable the welcome screen and accept the license -->
    <WelcomeScreenShown>true</WelcomeScreenShown>
    <LicenseAccepted>true</LicenseAccepted>

    <!-- Disable the popup asking to save worlds when exiting -->
    <SavePromptOnExit>false</SavePromptOnExit>

    <!-- Disable the popup notifying a new Webots version is available -->
    <CheckForNewVersion>false</CheckForNewVersion>

    <!-- Optional: disable automatic backup of worlds -->
    <BackupOnSave>false</BackupOnSave>

    <!-- Optional: other safe defaults for headless or GUI use -->
    <ShowSplashScreen>false</ShowSplashScreen>
    <RecentWorldsMaxCount>0</RecentWorldsMaxCount>

    <!-- Set the theme to Dark mode -->
    <Theme>Dark</Theme>
</Preferences>
